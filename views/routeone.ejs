    <script>
        // Map initialization 
        const map = L.map('map').setView([42.407211, -71.382439], 9);

        const userIcon = L.icon({
            iconUrl: 'img/user.png',
            iconSize: [25, 25],
            iconAnchor: [12.5, 12.5],
        });

        const busIcon = L.icon({
                iconUrl: 'img/bus.png',
                iconSize: [25, 25],
                iconAnchor: [12.5, 12.5],
            });
            
        const tiles = L.tileLayer('https://api.mapbox.com/styles/v1/{id}/tiles/{z}/{x}/{y}?access_token={accessToken}', {
                attribution: 'Map data &copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors, Imagery Â© <a href="https://www.mapbox.com/">Mapbox</a>',
                maxZoom: 18,
                id: 'mapbox/streets-v11',
                tileSize: 512,
                zoomOffset: -1,
                accessToken: 'pk.eyJ1IjoibWFydGVjb2RlcyIsImEiOiJja3ZwZG0zeDRlZ3lsMnptbjhiZ3NrbTFtIn0.vXc_RJA_QcE0YbvvDc28tA'
            }).addTo(map);

        if (!navigator.geolocation) {
                console.log("Your browser doesn't support geolocation feature!")
            } else {
                setInterval(() => {
                    navigator.geolocation.getCurrentPosition(getPosition)
                }, 3000);
            }

        let marker, circle, bus;


        function getPosition(position) {
            // console.log(position)
            let lat = position.coords.latitude
            let long = position.coords.longitude
            let accuracy = position.coords.accuracy

            if (marker) {
                map.removeLayer(marker)
            }


            if (circle) {
                map.removeLayer(circle)
            }

            marker = L.marker([42.3023902, -71.4096396],{icon: userIcon})
            circle = L.circle([lat, long], { radius: accuracy })
            bus = L.marker([lat, long], { icon: busIcon })

            let featureGroup = L.featureGroup([marker, circle, bus]).addTo(map)

            map.fitBounds(featureGroup.getBounds())

            console.log("Your coordinate is: Lat: " + lat + " Long: " + long + " Accuracy: " + accuracy)
        }

    </script>
